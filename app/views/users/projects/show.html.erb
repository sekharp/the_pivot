<div class="project-info container">
  <h2 class="center-align"><%= @project.title %></h2>
  <h5 class="borrower-info center-align"><em><%= @project.user.full_name %></em></h5>
  <p><%= @project.description %></p>
  <strong>Funding Goal: <%= number_to_currency(@project.goal_amount) %></strong>
  <div class="lend-btn">
    <%= link_to "Lend",
        new_user_cart_project_path(user: @project.user.slug,
                                   project: @project),
                                   class: "col s5 left waves-effect waves-light btn custom-blue"%>
  </div>
</div>
<div class="center-align">
  <%= link_to_projects_page %>
</div>

