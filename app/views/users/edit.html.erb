<h1>Edit Profile</h1>

<%= form_for(@user, :url => {:action => "update", :id => @user.id}) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :street_address %>
  <%= f.text_field :street_address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

  <%= f.label :bio %>
  <%= f.text_field :bio %>

  <%= f.label :image %>
  <%= f.file_field :image, class: 'form-control' %><br><br>

  <%= f.submit "Update Profile" %>
<% end %>
