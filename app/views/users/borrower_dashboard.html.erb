<div id="profile">
  <h2>Borrower Profile</h2>
  <div class="col s4">
    <a class="image-link"><img class="max-width" src="<%= current_user.image.url(:original) %>"></a>
  </div>
  <p>
    <bio>First name: </bio><%= current_user.first_name %>
  </p>
  <p>
    <bio>Last name: </bio><%= current_user.last_name %>
  </p>
  <p>
    <bio>Username: </bio><%= current_user.username %>
  </p>
  <p>
    <bio>Bio: </bio><%= current_user.bio %>
  </p>

  <div id='user-<%= current_user.id %>-button' class="waves-effect waves-light btn custom-blue">
    <%= button_to "Edit Profile", edit_user_path(@user.id), method: :get %>
  </div>

  <h3>Your Current Projects</h3>
  <ul>
  <% current_user.projects.each do |project| %>
    <a class="image-link" href="<%= user_project_path(user: project.user.slug, id: project.slug) %>"><img class="thumbnail" src="<%= project.image.url(:original) %>"></a>
    <li>Project Title: <%= project.title %></li>
    <li>Project Status: <%= project.status %></li>
    <li>Goal Amount: $<%= project.goal_amount %></li>
    <li>Description: <%= project.description %></li>
    <li>Percent Funded: <%= project.percent_funded %>%</li>
    <br></br>
  <% end %>
  </ul>

  <div class="create-project waves-effect waves-light btn custom-green">
    <%= button_to "Create A New Project", new_borrower_project_path(current_user.username), method: :get %>
  </div>
</div>
