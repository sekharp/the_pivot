<h1 id="top">
  <%= "All Projects" %>
</h1>

<span id='categories-path-button' class="col s5 waves-effect waves-light btn custom-blue">
  <%= link_to "List of Project Categories", categories_path, method: :get %>
</span>

<div class="row">
  <% @projects.each do |project| %>
    <div class="card col s12">
      <div>
        <div class="col s4">
          <a class="image-link" href="<%= user_project_path(user: project.user.slug, id: project.slug) %>"><img class="max-width" src="<%= project.image.url(:original) %>"></a>
        </div>
        <div class="col s7 offset-s1">
          <h5><%= project.title %></h5>
          <p><%= project.description %></p>
        </div>
        <div class="card-action col s7 offset-s1">
          <div class="center">
            <h5><strong>Funding Goal: <%= number_to_currency(project.goal_amount) %>, <%= project.percent_funded %>% complete</strong></h5>
          </div>
          <div class="center">
          <span id='<%= project.title %>-button' class="col s5 left waves-effect waves-light btn custom-blue">
            <%= button_to "Learn More", user_project_path(user: project.user.slug, id: project.slug), method: :get %>
          </span>
          <span id='<%= project.title%>-lend-button' class="col s5 right waves-effect waves-light btn custom-blue">
            <%= button_to "Lend", "#" %>
          </span>
        </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="center">
  <a class="waves-effect waves-light btn custom-blue" href="#primary-navigation">Back to top</a>
</div>
<br>
