<h1><%= @category.title.capitalize %> Stickers</h1>

<div id='stickers' class="row">
  <% @category.stickers.each do |sticker| %>
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <a id='<%= sticker.title %>-link' href="<%= sticker_path(sticker.id) %>"><img src="<%= sticker.image.url %>"></a>
        </div>
        <div class="card-content">
          <p><%= sticker.description %></p>
        </div>
        <div class="card-action">
          <div class="waves-effect waves-light btn blue"><%= button_to "Add to Cart", cart_stickers_path(sticker_id: sticker.id) %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>
