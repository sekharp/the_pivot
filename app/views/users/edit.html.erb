<h1>Edit Profile</h1>

<%= form_for(@user, :url => {:action => "update", :id => @user.id}) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <%= f.label :image %>
  <%= f.file_field :image, class: 'form-control' %><br><br>
  <%= f.submit "Update Profile" %>
<% end %>
