<div class="project-info container">
  <h2 class="center-align"><%= @project.title %></h2>
  <h5 class="borrower-info left-align"><em>Borrower: <%= @project.user.full_name %></em></h5>
  <div class="right-align col s2 offset-s1">
    <a class="image-link"><img class="thumbnail circle" src="<%= @project.user.image.url(:original) %>"></a>
  </div>
  <a class="image-link" href="<%= user_project_path(user: @project.user.slug, id: @project.slug) %>"><img class="max-width" src="<%= @project.image.url(:original) %>"></a>
  <p><%= @project.description %></p>
  <h6><strong>Funding Goal: <%= number_to_currency(@project.goal_amount) %>
  <h5 class="custom-orange-text">Amount Loaned: <%= number_to_currency(@project.total_loans_amount) %></h5>
  <h5 class="custom-green-text"><%= @project.percent_funded %>% complete</h5>
  <div class="lend-btn">
    <%= link_to "Lend",
        new_user_cart_project_path(user: @project.user.slug,
                                   project: @project),
                                   class: "col s5 left waves-effect waves-light btn custom-blue"%>
  </div>
</div>

<br><br>

<div class="loans container">
  <h3 class="center-align">Loans</h3>

  <ul class="collection">
    <% @loans.each do |loan| %>
      <li class="collection-item">
        <b><%= loan.user.full_name %></b><br>
        Amount: <%= number_to_currency(loan.amount) %><br><br>
        <div class="right-align">
          <em>Created on <%= loan.created_at.strftime("%b %e, %Y") %></em>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<br><br>

<div class="center-align">
  <%= link_to_projects_page %>
</div>
